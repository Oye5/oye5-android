<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_8">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="@dimen/product_photo_list_size"
            android:layout_height="@dimen/product_photo_list_size"
            android:scaleType="fitXY"
            android:src="@drawable/img_product_sample" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_2">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nicholas Stewart"
                android:textColor="@color/gray_color1"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_2"
                android:text="jbl speaker"
                android:textColor="@color/gray_color4"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47 seconds ago"
                android:textColor="@color/gray_color2"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <com.android.oye5.libs.CircleImageView
            android:id="@+id/imgUserPhoto"
            android:layout_width="@dimen/user_photo_list_size"
            android:layout_height="@dimen/user_photo_list_size"
            android:scaleType="fitXY"
            android:src="@drawable/img_profile_sample" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_right"
        android:layout_width="@dimen/dp_80"
        android:layout_height="match_parent"
        android:background="@color/red_color3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_overlay_btn"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/btnDelete">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_delete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

