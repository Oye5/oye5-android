<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lstChats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/gray_color8"
        android:dividerHeight="@dimen/dp_05" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutNoChats">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_no_chat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_color1"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:text="@string/chats_no_list" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/chats_sell_your_stuff"
                        android:id="@+id/btnSellYourStuff"
                        android:textAllCaps="false"
                        android:paddingLeft="@dimen/dp_50"
                        android:paddingRight="@dimen/dp_50"/>
            </LinearLayout>
    </RelativeLayout>
</RelativeLayout>